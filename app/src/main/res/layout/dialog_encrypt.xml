<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_public_encrypt"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:hint="public key"
            android:inputType="number" />

        <EditText
            android:id="@+id/et_private_encrypt"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:hint="private key"
            android:inputType="number" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_manualencrypt_encrypt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:text="Enkripsi Manual" />


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorPrimaryDark" />


    <Button
        android:id="@+id/btn_autoencrypt_encrypt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:src="@drawable/send_encrypted"
        android:text="Enkripsi Otomatis" />
</LinearLayout>